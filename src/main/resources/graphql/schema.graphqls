type Query{
    obras: [Obra]
    obrasPorArtista(artista:String!): [Obra]
    galerias: [Galeria]
}

type Mutation{
    addObra(nueva: ObraInput): Obra
}

type Obra{
    id: ID
    titulo: String
    artista: String
    precio: Float
}

input ObraInput{
    titulo: String
    artista: String
    precio: Float
}

type Galeria{
    id: ID
    nombre: String
    obras: [Obra]
}