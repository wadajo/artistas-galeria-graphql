type Query{
    obras: [Obra]
    obrasPorArtista(apellidoArtista:String!): [Obra]
}

type Mutation{
    addObra(nueva: ObraInput): Obra
}

type Obra{
    id: ID
    titulo: String
    precio: Float
    artista: Artista
}

input ObraInput{
    titulo: String
    artista: String
    precio: Float
}

type Artista{
    id: ID
    apellido: String
    obras: [Obra]
}